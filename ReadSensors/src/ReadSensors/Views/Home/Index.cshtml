@using MvcSample.Web.Models
@model User
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
    string helloClass = null;
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-large">Learn more &raquo;</a></p>
</div>
<div class="row">
  <div class="col-md-12">
    <h3 title="@Model.Name" class="@helloClass">Hello @Model.Name!</h3>
    <p>Ist ein RaspPI: @Model.Board.IsRaspberryPi</p>
    <p>Raspberry PI Model: @Model.Board.Model</p>
    <p>Firmware: @Model.Board.Firmware</p>
<p>SerialNumber: @Model.Board.SerialNumber</p>
<p>Processor: @Model.Board.Processor</p>
<p>IsOverclocked: @Model.Board.IsOverclocked</p>
  </div>
</div>
